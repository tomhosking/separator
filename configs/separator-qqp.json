{
    "name": "wikianswers",
    "tag": "separator",
    "task": "para",
    "env": {
        "cuda": true,
        "data_path": "./data",
        "gpu_device": 0

    },
    "training": {
        "dataset": "json",
        "use_preprocessed_data": false,
        "log_interval": 100,
        "lr_schedule": true,
        "lr": 0.005,
        "beta1": 0.9,
        "beta2": 0.98,
        "batch_size": 32,
        "optim_batch_size": 64,
        "clip_gradient": 5,
        "num_epochs": 50,
        "opt": "adam",
        "warmup_epochs": 5,
        "suppression_loss_weight": 0.0,
        "label_smoothing": 0.0,
        "early_stopping_lag": 0,
        "reset_metrics": true,
        "token_dropout": 0.2,
        "kl_warmup_steps": 10000
    },
    "json_dataset": {
        "path": "wa-triples/qqp-clusters-chunk-extendstop-realexemplars-resample-drop30-N5-R100",
        "field_map": [
            {
                "from": "syn_input",
                "to": "template"
            },
            {
                "from": "tgt",
                "to": "s2"
            },
            {
                "from": "sem_input",
                "to": "s1"
            }
        ]
    },
    "eval": {
        "eval_batch_size": 16,
        "sampler": "beam",
        "max_out_len": 50,
        "metrics": ["sep_ae"]
    },
    "beam_search": {
        "beam_width": 4,
        "beam_expansion": 2,
        "length_alpha": 1.0
    },
    "prepro": {
        "vocab_size": 30522,
        "sent_window": 0,
        "tok_window": 100,
        "concat_ctxt_ans": false,
        "bio_tagging": true,
        "tokenizer": "bert-base-uncased"
    },

    "dropout": 0.1,

    "raw_embedding_dim": 768,
    
    "encoder": {
        "embedding_dim": 768
    },
    "decoder": {
        "embedding_dim": 768
    },
    "onehot_bio" : false,
    "bio_embedding_dim": 8,
    "freeze_embeddings": true,
    "freeze_projection": true,
    "directional_masks": true,
    "encdec": {
        "num_encoder_layers": 5,
        "num_decoder_layers": 5,
        "num_heads": 8,
        "dim_feedforward": 2048,
        "activation": "relu",
        "bert_encoder": false
    },
    "bottleneck": {
        "embedding_dim": 768,
        "separation_loss_weight": 0.0,
        "use_templ_encoding": true,
        "num_similar_heads": 6,
        "flip_separation_loss": false,
        "variational": true,
        "vector_quantized": true,
        "codebook_size": 256,
        "quantizer_heads": 16,
        "quantizer_residual": false,
        "quantizer_num_residual": 12
    }
}